<?xml version="1.0"?>
<block>
  <name>Burst and Silence correlator</name>
  <key>xfdm_sync_burstsilence_corr</key>
  <category>[xfdm_sync]</category>
  <import>import xfdm_sync</import>
  <make>xfdm_sync.burstsilence_corr($preamble_length)</make>

  <param>
    <name>Preamble length</name>
    <key>preamble_length</key>
    <type>int</type>
  </param>

  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>

  <source>
    <name>out_pass</name>
    <type>complex</type>
  </source>

  <source>
    <name>out_corr</name>
    <type>complex</type>
  </source>
</block>
