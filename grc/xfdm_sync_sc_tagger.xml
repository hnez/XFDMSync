<?xml version="1.0"?>
<block>
  <name>sc_tagger</name>
  <key>xfdm_sync_sc_tagger</key>
  <category>[xfdm_sync]</category>
  <import>import xfdm_sync</import>
  <make>xfdm_sync.sc_tagger($thres_low, $thres_high, $seq_len)</make>

  <param>
    <name>Lower Threshold</name>
    <key>thres_low</key>
    <type>float</type>
  </param>

  <param>
    <name>Upper Threshold</name>
    <key>thres_high</key>
    <type>float</type>
  </param>

  <param>
    <name>Sequence length</name>
    <key>seq_len</key>
    <type>int</type>
  </param>

  <sink>
    <name>in_pass</name>
    <type>complex</type>
  </sink>

  <sink>
    <name>in_corr</name>
    <type>complex</type>
  </sink>

  <source>
    <name>out</name>
    <type>complex</type>
  </source>
</block>
